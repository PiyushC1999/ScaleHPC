[root@mds-mgmt ~]# vim ~/.bashrc 
export PATH=/opt/pbs/bin:$PATH

[root@mds-mgmt ~]# source ~/.bashrc
-------------------------------------------------------------------------------------------------------------------------------------------------
[root@mds-mgmt ~]# /opt/pbs/bin/qstat --version
pbs_version = 23.06.06

[root@mds-mgmt ~]# qstat -Q
